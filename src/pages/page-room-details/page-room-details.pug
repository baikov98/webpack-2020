extends ../../base
block variables
    - var pageTitle = 'Room details'

include ../../components/header/header
include ../../components/card-tobook/card-tobook.pug
include ../../components/benefits-desc/benefits-desc
include ../../components/comment/comment
include ../../components/bullet-list/bullet-list
include ../../components/votes-disc/votes-disc
include ../../components/calendar/calendar
include ../../components/comment/comment

block content
    main.page-room-details
        +header({logged: false})
        .page-room-details__container
            .page-room-details__images
                img(src="img/room-details1.png", alt="").page-room-details__image1
                img(src="img/room-details2.png", alt="").page-room-details__image2
                img(src="img/room-details3.png", alt="").page-room-details__image3
            .page-room-details__disc
                .page-room-details__item1
                    .page-room-details__title Сведения о номере
                    +benefits-desc({iconName: 'insert_emoticon', title: 'Комфорт', text: 'Шумопоглощающие стены', hr: true})
                    +benefits-desc({iconName: 'location_city', title: 'Удобство', text: 'Окно в каждой из спален', hr: true})
                    +benefits-desc({iconName: 'location_city', title: 'Уют', text: 'Номер оснащён камином'})
                .page-room-details__item2
                    .page-room-details__title Впечатления от номера
                    +votes-disc()
                .page-room-details__item3
                    +card-tobook({dropid: 'drop14', price: 9900, adserve: 300, addcost: 400, days: 5})
                .page-room-details__item4
                    .page-room-details__comment-head
                        .page-room-details__title Отзывы посетителей номера
                        span 2 отзыва
                    .page-room-details__comment
                        +comment({name: 'Мурад Сарафанов', date: '5 дней назад', 
                                text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.', 
                                number: 12, content: 'favorite', img: 'comment.png', alt: 'com'})
                    .page-room-details__comment
                        +comment({name: 'Патрисия Стёклышкова', date: 'Неделю назад', 
                                text: 'Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент', 
                                number: 2, content: false, img: 'comment1.png', alt: 'com'})
                .page-room-details__item5
                    .page-room-details__title Правила
                    +bullet-list(['Нельзя с питомцами', 
                                'Без вечеринок и мероприятий', 
                                'Время прибытия — после 13:00, а выезд до 12:00'])
                .page-room-details__item6
                    .page-room-details__title Отмена
                    .page-room-details__text Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.

        include ../../components/footer/footer.pug